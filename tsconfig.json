{
  "compilerOptions": {
    "module": "commonjs",
    "rootDir": "./src",
    "baseUrl": "./src",
    "outDir": "./dist",
    "noImplicitAny": false,
    "strictNullChecks": false,
    "noImplicitReturns": false,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "target": "es5",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2018",
      "dom"
    ]
  },
  "exclude": ["**/__tests__", "**/__mocks__"]
}
